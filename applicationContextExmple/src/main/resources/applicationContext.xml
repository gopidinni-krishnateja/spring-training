<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "message" class = "com.example.eventHandler.Message">
        <property name = "message" value = "Event Handler Working"/>
    </bean>

    <bean id = "startEvent" class = "com.example.eventHandler.StartEvent"/>
    <bean id = "stopEvent" class = "com.example.eventHandler.StopEvent"/>
</beans>